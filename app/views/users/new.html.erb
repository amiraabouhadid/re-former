<%= form_with model: @user do |form| %>
<%= form.label :username, "Please enter the following to sign up:" %>
<br>
<%= form.label :username, "Enter Your Username:" %>
<%= form.text_field :username, placeholder: 'FrancisCharles' %>
<br>
<%= form.label :password, "Enter Your Password:" %>
<%= form.password_field :password %>
<br>
<%= form.label :email, "Enter Your Email"%>
<%= form.email_field :email, placeholder: 'youremail@example.com' %>
<br>

<%= form.submit "Sign up" %>
<% end %>
